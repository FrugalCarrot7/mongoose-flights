<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>flights new.ejs</title>
</head>
<body>
    <header>
        <div class="topnav">
            <a class="active" href="/">Home</a>
            <a href="/flights/new">Add Flight</a>
            <a href="/flights/">All Flights</a>
            <a href="/">home again</a>
          </div>
    </header>
    <main>
        <div>
            <table>
                <thead>
                <tr>
                    <th>Airline:</th>
                    <td><%= flight.airline %></td>
                </tr>
                <tr>
                    <th>Airport:</th>
                    <td><%= flight.airport %></td>
                </tr>
                <tr>
                    <th>Flight #:</th>
                    <td><%= flight.flightNo %></td>
                </tr>
                <tr>
                    <th>Departure:</th>
                    <td><%= flight.departs %>></td>
                </tr>
                </thead>
            </table>
        </div>

          <!-- destinations are below-->
        <div>
          <h2>Add Destination:</h2>
            <form method="POST" action="/flights/<%= flight._id %>/destinations">

            <label>Destination:</label>
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DFW">DFW</option>
                <option value="DEN">DEN</option>
                <option value="LAX">LAX</option>
                <option value="SAN">SAN</option>
            </select>
            <label>Arrival</label>
                <input type="date" name="arrival">
            <input type="submit" value="add">
            </form>
        </div>
        <div>
            <% if (flight.destinations.length) { %>
                <table>
                  <thead>
                    <tr>
                      <th>Airport</th>
                      <th>Arrival</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% flight.destinations.forEach(function(d) { %>
                      <tr>
                        <td><%= d.airport %></td>
                        <td><%= d.arrival %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              <% } else { %>
                <h5>No destination yet!</h5>
              <% } %>
        </div>
        <div>
          <h3>Tickets</h3>
          <a href="/flights/:id/tickets/new"><button>Add Ticket</button></a>
        </div>  
        <div>
          <table>
            <thead>
                <th>
                    Seats
                </th>
                <th>
                    Price
                </th>
                
            </thead>
            <% tickets.forEach(function(ticket) { %>
                <tr>
                    <td><%= ticket.seat %></td>
                    <td><%= ticket.price %></td>
                  
                </tr>
            <% }) %>
          </table>
        </div>
    </main>

</body>
</html>